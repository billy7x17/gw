<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<!-- class元素指定类和表的映射 -->
	<class name="domain.Record" table="portal_record_t">
		<!-- id元素设定持久化类的OID和表的主键的映射 -->
		<id name="record_id" column="record_id" type="int"><!-- Hibernate映射类型 -->
			<!-- generator元素指定对象标识符生成器 -->
		</id>

		<property name="user_id" type="int" column="user_id">

		</property>

		<property name="goods_id" type="int" column="goods_id">

		</property>

		<property name="store_id" type="int" column="store_id">

		</property>

		<property name="create_time" type="timestamp" column="create_time">

		</property>

		<!-- property元素设定类的属性和表的字段的映射 -->
	</class>
</hibernate-mapping>
