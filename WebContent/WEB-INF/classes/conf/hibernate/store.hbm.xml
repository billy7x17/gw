<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	<!-- class元素指定类和表的映射 -->
	<class name="domain.Store" table="portal_store_t">
		<!-- id元素设定持久化类的OID和表的主键的映射 -->
		<id name="store_id" column="store_id" type="int"><!-- Hibernate映射类型 -->
			<!-- generator元素指定对象标识符生成器 -->
		</id>
		
		<property name="store_name" type="string" column="store_name">
			
		</property>
		
		<property name="create_time" type="timestamp" column="create_time">
			
		</property>
		
		<property name="update_time" type="timestamp" column="update_time">
			
		</property>


		<!-- property元素设定类的属性和表的字段的映射 -->
	</class>
</hibernate-mapping>
